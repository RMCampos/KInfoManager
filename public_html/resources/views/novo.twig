{% extends 'templates/wind.twig' %}

{% block content %}
    <div class="row">
        <div class="col-sm-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Novo item
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <form action="{{ path_for('novo') }}" method="POST" autocomplete="off">
                                <div class="form-group{{ errors.titulo ? ' has-error' : '' }}">
                                    <label class="control-label" for="titulo">Título *</label>
                                    <input type="text" id="titulo" name="titulo" class="form-control" required value="{{ old.titulo }}">
                                    {% if errors.titulo %}
                                        <span class="help-block">{{ errors.titulo | first }}</span>
                                    {% endif %}
                                </div>
                                <div class="form-group{{ errors.categoria ? ' has-error' : '' }}">
                                    <label class="control-label" for="categoria">Categoria *</label>
                                    <input type="text" id="categoria" name="categoria" class="form-control" required onkeyup="liveselect(this.value)">
                                    {% if errors.categoria %}
                                        <span class="help-block">{{ errors.categoria | first }}</span>
                                    {% endif %}
                                    <span class="help-block"><div id="liveselect"></div></span>
                                </div>
                                <div class="form-group{{ errors.tags ? ' has-error' : '' }}">
                                    <label class="control-label" for="tags">Tags (separadas por vírgula) *</label>
                                    <input type="text" id="tags" name="tags" class="form-control" required value="{{ old.tags }}">
                                    {% if errors.tags %}
                                        <span class="help-block">{{ errors.tags | first }}</span>
                                    {% endif %}
                                </div>
                                <div class="form-group{{ errors.tabelas ? ' has-error' : '' }}">
                                    <label class="control-label" for="tabelas">Tabelas envolvidas (separadas por vírgula)</label>
                                    <input type="text" id="tabelas" name="tabelas" class="form-control" value="{{ old.tabelas }}">
                                    {% if errors.tabelas %}
                                        <span class="help-block">{{ errors.tabelas | first }}</span>
                                    {% endif %}
                                </div>
                                <div class="form-group{{ errors.situacao ? ' has-error' : '' }}">
                                    <label class="control-label" for="situacao">Situação *</label>
                                    <textarea id="situacao" name="situacao" class="form-control" required>{{ old.situacao }}</textarea>
                                    {% if errors.situacao %}
                                        <span class="help-block">{{ errors.situacao | first }}</span>
                                    {% endif %}
                                </div>
                                <div class="form-group{{ errors.solucao ? ' has-error' : '' }}">
                                    <label class="control-label" for="solucao">Solução *</label>
                                    <textarea id="solucao" name="solucao" class="form-control" required>{{ old.solucao }}</textarea>
                                    {% if errors.solucao %}
                                        <span class="help-block">{{ errors.solucao | first }}</span>
                                    {% endif %}
                                </div>
                                <div class="form-group{{ errors.criador ? ' has-error' : '' }}">
                                    <label class="control-label" for="criador">Criado por *</label>
                                    <select id="criador" name="criador" class="form-control" required>
                                        <option value="" {{ old.criador == ''? 'selected' : '' }}>Selecione</option>
                                        <option value="ademar"   {{ old.criador == 'ademar'? 'selected' : '' }}>Ademar</option>
                                        <option value="andre"    {{ old.criador == 'andre'? 'selected' : '' }}>André</option>
                                        <option value="daniel"   {{ old.criador == 'daniel'? 'selected' : '' }}>Daniel</option>
                                        <option value="gustavo"  {{ old.criador == 'gustavo'? 'selected' : '' }}>Gustavo</option>
                                        <option value="izaura"   {{ old.criador == 'izaura'? 'selected' : '' }}>Izaura</option>
                                        <option value="renato"   {{ old.criador == 'renato'? 'selected' : '' }}>Renato</option>
                                        <option value="ricardo"  {{ old.criador == 'ricardo'? 'selected' : '' }}>Ricardo</option>
                                        <option value="rodrigob" {{ old.criador == 'rodrigob'? 'selected' : '' }}>Rodrigo Bona</option>
                                        <option value="rodrigoc" {{ old.criador == 'rodrigoc'? 'selected' : '' }}>Rodrigo Cruz</option>
                                        <option value="sieghard" {{ old.criador == 'sieghard'? 'selected' : '' }}>Sieghard</option>
                                        <option value="valdecir" {{ old.criador == 'valdecir'? 'selected' : '' }}>Valdecir</option>
                                    </select>
                                    {% if errors.criador %}
                                        <span class="help-block">{{ errors.criador | first }}</span>
                                    {% endif %}
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-success">Salvar</button>
                                    <a href="{{ path_for('home') }}" class="btn btn-default">Cancelar</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <script>
        function selectItem(item) {
            document.getElementById('categoria').value = item;
            document.getElementById('liveselect').innerHTML = '';
        }
    </script>
{% endblock %}